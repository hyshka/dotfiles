# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	#separator = " - "
	color_good = "#a5c261"
	color_degraded = "#ffc66d"
	color_bad = "#da4939"
}

order += "volume master"
order += "wireless wlp3s0"
order += "ethernet enp0s25"
order += "battery 0"
order += "load"
order += "tztime date"
order += "tztime time"

volume master {
	format = "  %volume"
	format_muted = "  (%volume)"
	device = "pulse"
}		

wireless wlp3s0 {
	format_up = "  %essid (%quality) %ip"
	format_down = "  down"
}

ethernet enp0s25 {
	format_up = "  %ip"
	format_down = "  down"
}

battery 0 {
        format = "%status  %percentage %remaining"
	format_down = ""
	integer_battery_capacity = true
	hide_seconds = true
	status_chr= ""
        status_bat= ""
        status_full = ""
}

load {
        format = "  %1min"
}

tztime date {
        format = "  %a %Y-%m-%d"
}

tztime time {
        format = "  %H:%M     "
}
