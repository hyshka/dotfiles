#!/bin/sh

if [ "$HOSTNAME" = brix ]; then
	DEST="/run/media/hyshka/Lift Portable/brix-home"
else
	DEST=/media/Portable/hyshka/
fi


rsync \
	-aAXS \
	--delete \
	--info=progress2 \
	--exclude={ \
		".thumbnails/*", \
		".cache/*", \
		".local/share/Trash/*", \
		".gvfs" \
	} \
	/home/hyshka \ # source
	$DEST # destination

