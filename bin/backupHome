#!/bin/sh

if [ "$HOSTNAME" = brix ]; then
	DEST="/run/media/hyshka/Lift Portable/brix-home"
else
	DEST=/media/Portable/hyshka/
fi

SRC=/home/hyshka

rsync \
	# 'aAX' handles files in archive mode
	# S handles sparse files properly
	# v is to increase verbosity
	-aAXSv \
	# delete extraneous files from dest dirs
	--delete \
	--info=progress2 \
	# do each exclude separate
	--exclude="$SOURCE.thumbnails/*" \
	--exclude="$SOURCE.cache/*" \
	--exclude="$SOURCE.local/share/Trash/*" \
	--exclude="$SOURCE.gvfs" \
	$SRC \ # source
	$DEST # destination

