#####################
# SETUP ENVIRONMENT #
#####################

# setup paths
PATH=./node_modules/.bin:"$HOME/.nvm/versions/node/v4.4.0/bin":$HOME/.bin:$PATH:/bin:$HOME/.rvm/bin
FPATH=$FPATH:$HOME/.fpath
GOPATH=$HOME/.gocode

# default apps
export VISUAL=nvim
export EDITOR=nvim
export TERMINAL=urxvt
if [ -n "$DISPLAY" ]; then
    if [ "$HOSTNAME" = brix ]; then
        export BROWSER=chromium
    else
        export BROWSER=firefox
    fi
else
    export BROWSER=w3m
fi

# set default gtk2 theme
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# prevent Firefox from creating Desktop directory
export XDG_DESKTOP_DIR="$HOME/Downloads"

# virtualenv
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python2
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Lift
source /usr/bin/virtualenvwrapper.sh

# node version manage
export NVM_DIR="$HOME/.nvm"
source /usr/share/nvm/nvm.sh
source /usr/share/nvm/install-nvm-exec

# ruby version manager
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# Base16 Shell
BASE16_SHELL=$HOME/.config/base16-shell/
[ -n "$PS1" ] && [ -s $BASE16_SHELL/profile_helper.sh ] && eval "$($BASE16_SHELL/profile_helper.sh)"

# Zim!
if [[ -s ${ZDOTDIR:-${HOME}}/.zim/init.zsh ]]; then
  source ${ZDOTDIR:-${HOME}}/.zim/init.zsh
fi
